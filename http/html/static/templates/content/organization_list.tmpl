{{ template "layout" . }}

{{ define "title" }}Organizations{{ end }}

{{ define "container-header-actions" }}
  <form action="{{ newOrganizationPath }}" method="GET">
    <button type="submit">New Organization</button>
  </form>
{{ end }}

{{ define "container-header" }}organizations{{ end }}

{{ define "content" }}
  {{ range .Content.Items }}
  <div class="item">
    <div class="item-heading">
    <a class="status" href="{{ getOrganizationPath . }}">{{ .Name }}</a>
    </div>
    <div class="id"><a class="identifier" href="{{ getOrganizationPath . }}">{{ .ID }}</a></div>
  </div>
  {{ end }}
{{ end }}
